<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ke_kho_form" model="ir.ui.view">
            <field name="name">ke.kho.form</field>
            <field name="model">ke.kho</field>
            <field name="arch" type="xml">
                <form string="Kệ kho">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group string="Thông tin">
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ke_kho_tree" model="ir.ui.view">
            <field name="name">ke.kho.tree</field>
            <field name="model">ke.kho</field>
            <field name="arch" type="xml">
                <tree string="Danh sách kệ kho" editable="bottom">
                    <field name="name" optional="show"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- action view-->
        <record id="action_view_ke_kho" model="ir.actions.act_window">
            <field name="name">Danh sách kệ kho</field>
            <field name="res_model">ke.kho</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new ...
                </p>
            </field>
        </record>

        <menuitem id="menu_ke_kho" name="Kệ kho" sequence="1"
                  web_icon="lib_management,static/src/img/logo.png"
                  groups="base.group_system,lib_management.group_lib_management"/>
        <menuitem id="menu_sub_ke_kho" name="Danh sách" parent="menu_ke_kho" action="action_view_ke_kho"
                  sequence="3" groups="base.group_system,lib_management.group_lib_management"/>
    </data>
</odoo>

